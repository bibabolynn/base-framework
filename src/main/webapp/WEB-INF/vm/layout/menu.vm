#set($layout = "layout/null.vm")
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>o2o-wazard管理系统</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="cache-control" content="no-cache">
    <meta http-equiv="expires" content="0">
    <link href="#springUrl('/static/plugins/bootstrap/css/bootstrap.css')" rel="stylesheet"/>
    <script type="text/javascript" src="#springUrl('/static/plugins/jquery.js')"></script>
    <script type="text/javascript" src="#springUrl('/static/plugins/bootstrap/js/bootstrap.js')"></script>
    <style>
        .panel-group{max-height:900px;overflow: auto;}
        .leftMenu{margin:1px;margin-top:5px;}
        .leftMenu .panel-heading{font-size:14px;padding-left:20px;height:36px;line-height:36px;color:white;position:relative;cursor:pointer;background-color: #1873aa}/*转成手形图标*/
        .leftMenu .panel-heading a{color:white;text-decoration:none}/*转成手形图标*/
        .leftMenu .panel-heading span{position:absolute;right:10px;top:12px;}
    </style>
</head>
<body>
<div class="row">
    <div class="col-md-2">
        <div class="panel-group table-responsive" role="tablist">
            #foreach($menu1 in $treeResList)
                <div class="panel panel-primary leftMenu">
                    <!-- 利用data-target指定要折叠的分组列表 -->
                    <div class="panel-heading" id="collapseListGroupHeading1" data-toggle="collapse" data-target="#$!{menu1.id}" role="tab" >
                        <a #if ((! $menu1.href) || ("$!menu1.href" == "")) href="#" #else href="#springUrl('')$!{menu1.href}" target="frame_main" #end>
                            <h4 class="panel-title">
                                $!{menu1.text}
                                <span class="menu_head glyphicon #if($velocityCount == 1) glyphicon-chevron-down #else glyphicon-chevron-up #end right"></span>
                            </h4>
                        </a>
                    </div>
                #if($menu1.children && $menu1.children.size() > 0)
                    <!-- .panel-collapse和.collapse标明折叠元素 .in表示要显示出来 -->
                    <div id="$!{menu1.id}" class="panel-collapse collapse list-group #if($velocityCount == 1) in #end" role="tabpanel" aria-labelledby="collapseListGroupHeading1">
                    #foreach($menu2 in ${menu1.children})
                        #set($hasNextLevel=false)
                        #if($menu2.children && $menu2.children.size() > 0)
                            #set($hasNextLevel=true)
                        #end
                        <!-- 利用data-target指定URL 可以设置背景色list-group-item-info -->
                        <a class="menu_title list-group-item #if($hasNextLevel) hasNextLevel glyphicon glyphicon-triangle-bottom#end"
                           data-toggle="collapse" data-target="#$!{menu2.id}" #if ((! $menu2.href) || ("$!menu2.href" == "")) href="#" #else href="#springUrl('')$!{menu2.href}" target="frame_main" #end>
                            <span class="badge"></span>$!{menu2.text}
                        </a>
                        #if($hasNextLevel)
                            <div id="$!{menu2.id}" class="collapse list-group">
                                #foreach($menu3 in ${menu2.children})
                                    <!-- 利用data-target指定URL -->
                                    <a class="menu_title list-group-item" #if ((! $menu3.href) || ("$!menu3.href" == "")) href="#" #else href="#springUrl('')$!{menu3.href}" target="frame_main" #end>
                                        <span class="badge"></span>$!{menu3.text}
                                    </a>
                                #end
                            </div>
                        #end
                    #end
                    </div>
                #end
                </div>
            #end
        </div>
    </div>
</div>
<script>
    $(function(){
        $(".panel-heading").click(function(e){
            /* 折叠当前显示的一级菜单 */
            $(".in").collapse('hide');
            /* 切换折叠指示图标 */
            $(this).find(".menu_head").toggleClass("glyphicon-chevron-down").toggleClass("glyphicon-chevron-up");
        });
        $(".list-group-item").click(function(e){
            /* 设定当前选中图标 */
            var a = $(this);
            var span = a.find("span");
            if(a.hasClass("hasNextLevel")){
                a.toggleClass("glyphicon-triangle-top").toggleClass("glyphicon-triangle-bottom");
            }else{
                $(".glyphicon-hand-left").remove();
                if(span.find("i").length < 1){
                    span.append("<i class='glyphicon glyphicon-hand-left'></i>");
                }
            }
        });
    });
</script>
</body>
</html>

